<Window x:Class="wpf_tutorial_simplecontrols.LabelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_tutorial_simplecontrols"
        mc:Ignorable="d"
        Title="LabelControl" Height="450" Width="800">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
        <Label Target="{Binding ElementName=name}" Content="_Nome"></Label>
        <TextBox x:Name="name">Daniele</TextBox>
    </StackPanel>
</Window>
