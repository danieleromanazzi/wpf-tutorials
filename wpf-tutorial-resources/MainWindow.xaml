<Window x:Class="wpf_tutorial_resources.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_tutorial_resources"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--<ResourceDictionary Source="/wpf-tutorial-resources;component/Resources/DarkTheme.xaml" />-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
   </Window.Resources>
    <StackPanel x:Name="Login" Background="{DynamicResource Background}">
        <Image Source="{DynamicResource Atom}" MouseLeftButtonDown="Image_MouseLeftButtonDown" />

        <StackPanel>
            <TextBlock>Benvenuto, Daniele Romanazzi</TextBlock>
            <PasswordBox></PasswordBox>
            <Button Click="Button_Click">LOGIN</Button>
        </StackPanel>
    </StackPanel>
</Window>
